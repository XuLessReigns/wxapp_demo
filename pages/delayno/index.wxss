
page{
    background: #F5F5F9;
    padding-bottom: 100px;
    text-align: center;
}

.content,.content1,.content2,.content3{
    display: inline-block;
    width: 700rpx;
    background: #fff;
    border-radius: 5px;
    box-shadow:0 2px 10px 4px rgba(0,0,0,0.1);
}

.bottom-box{
    height: 20px;
}

.bottom-box:after{
    position: absolute;
    content: '';
    height:10px;
    width: 260px;
    background: #b0e1fe;
    bottom: 0;
    left: 50%;
    margin-left: -130px;
}

.bottom-box .bottom-c{
    position: relative;
    z-index: 10;
}