page{
    padding-bottom: 88px;
    background-color: #f5f5f9;
}

.banner{
    position: relative;
    font-size: 0;
}

canvas{
    position:absolute;
    top:0;
    width: 100%;
    height: 445rpx;
}

.banner image{
    width: 100%;
    height: 500rpx;
}

 .banner .text-title{
    position: absolute;
    top: 50rpx;
    left: 38rpx;
    width: 376rpx;
    height: 268rpx;
} 

.add-weather{
    position:absolute;
    left: 50rpx;
    top: 340rpx;
    height: 12rpx;
    line-height:12rpx;
    color:#fff;
    font-size:14px;
}

.add-weather .location{
    width: 16rpx;
    height: 26rpx;
    vertical-align: -2px;
}

.question{
    width:32px;
    height:32px;
    line-height:22px;
    z-index: 99;
}
.question::after{
    border:1px solid #fff;
}

.main-cnt{
    position: relative;
    margin-top: -54rpx;
    overflow: hidden;
    padding-bottom: 28px;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.buy-sheet{
    position: relative;
    background-color: #fff;    
    /*margin-right: 10px;
    margin-left: 10px;*/
    padding-right: 40rpx;
    padding-left: 40rpx;
    padding-bottom: 10px;
    border-radius: 5px 5px 0 0 ;
    box-shadow:0px -4px 15px rgba(82,153,250,0.2);
    z-index: 999;
}
.buy-sheet::before{
    content: "";
    position: absolute;
    height: 20px;
    width: 20px;
    border-radius: 100%;
    background: linear-gradient(to left, #dfe9f9,#edf0f9,#f5f5f9);
    top: 96%;
    left: -12px;
}
.buy-sheet::after{
    content: "";
    position: absolute;
    height: 20px;
    width: 20px;
    border-radius: 100%;
    background: linear-gradient(to right, #dfe9f9,#edf0f9,#f5f5f9);
    top: 96%;
    right: -12px;  
}
.box-s{
    box-shadow:0px -4px 15px rgba(82,153,250,0.2)!important;
}

.form-row{
    padding-left: 0;
    padding-right: 0;
}

.form-row>label{
    width: 80px;
}

.btn-box{
    padding: 26px 0;
    background-color:#f8fafc;
    border-radius: 0 0 5px 5px;
    box-shadow:0px 4px 15px rgba(82,153,250,0.2);
}

.btn-color{
    background: linear-gradient(to right, #3699fb, #4081f8)!important;
}

.btn-box .btn{
    background: linear-gradient(to right, #398ef9, #309cfb);
    border-radius: 5px;
    color: #fff;
    box-shadow:0 5px 10px rgba(196, 211, 232,0.3);
    line-height: 42px;
    height: 46px;
    margin: 0 70rpx;
}

.price{
    margin-left:2px;
    display:inline-block;
}

.text{
    position:relative;
    top:-2px;
}

.introduction{
    position: relative;
    background-color: #fff;
    padding: 55rpx 60rpx;
    border-radius: 5px;
    box-shadow:0px 4px 15px rgba(82,153,250,0.2);
}
.items{
    padding-left: 47px;
}

.item{
    position: relative;
}
.item-icon:after{
    position: absolute;
    left: -40px;
    top: 40px;
    content: '';
    height: 100%;
    width: 2px;
    background: #f8f8f8;
}

.item-title{
    font-weight: bold;
    line-height: 30px;
}
.plane,.time,.gift{
    position: absolute;
    left:-55px;
    top:15rpx;
    width: 32px;
    height: 32px;
    box-shadow:0px 10px 15px rgba(234, 242, 255,0.1)
}

.flight-tip{
    position:absolute;
    left:168rpx;
    color:#999;
    font-size:12px;
    line-height:52rpx;
}

.ui-term{
    padding-left: 20px;
}

.ui-term checkbox{
    left: 0
}

.ticketno-entry{
    padding: 0 20rpx;
    margin-bottom: 26px;
}

.ticketno-entry>view{
    background-color: rgba(233,233,235,0.3);
}

.dark-question{
    right: 25rpx
}

.ui-logo{
    bottom: 50px;
}

.flight-no input{
    position: absolute;
}

.index-ad{
    width:692rpx;
    height: 227rpx;
    margin-bottom:-18px;
}

.reminder{
    padding-top: 110rpx;
    z-index:10001;
    text-align:center;
}

.reminder .box{
    position: absolute;
    top: 20%;
    left: 50%;
    margin-left: -320rpx;
    display: inline-block;
    background:#fff;
    width:640rpx;
    /* height:244px; */
    border-radius: 10px;
}

.reminder .icon_reminder{
    margin-top: -50px;
    display: inline-block;
    height: 160px;
    width: 167px;
}

.reminder .border-close{
    bottom:18%;
    border:2px solid #fff;
}
.reminder .border-close::after,.reminder .border-close::before{
    background-color:#fff;
}

